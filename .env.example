# ============================================
# ENVIRONMENT VARIABLES - DEVELOPMENT
# ============================================
# IMPORTANTE: Copia questo file in .env e compila con valori reali
# ============================================

# ==========================================
# DATABASE
# ==========================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=studio_compliance
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}?schema=public"

# ==========================================
# NEXTAUTH (Autenticazione)
# ==========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production"

# ==========================================
# EMAIL (MailHog per sviluppo)
# ==========================================
EMAIL_HOST="mailhog"
EMAIL_PORT="1025"
EMAIL_USER=""
EMAIL_PASSWORD=""
EMAIL_FROM="noreply@studiocompliance.local"

# ==========================================
# REDIS (Cache e sessioni)
# ==========================================
REDIS_PASSWORD="dev_redis_password"
REDIS_URL="redis://:${REDIS_PASSWORD}@localhost:6379"

# ==========================================
# STORAGE
# ==========================================
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"

# ==========================================
# AWS (se necessario)
# ==========================================
AWS_S3_BUCKET=""
AWS_S3_REGION=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV="development"
APP_NAME="Studio Compliance Manager - DEV"
APP_URL="http://localhost:3000"
LOG_LEVEL="debug"
LOG_DIR="./logs"

# ==========================================
# TIMEZONE
# ==========================================
TZ="Europe/Rome"

# ==========================================
# CRON (se necessario)
# ==========================================
CRON_SECRET="your-cron-secret-for-vercel"
