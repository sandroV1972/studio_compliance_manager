  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "prisma format",
      "prisma generate"
    ]
  },
